@inherits LayoutComponentBase

<MudThemeProvider Theme="Ukraine" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Fixed="true" Style="@($"border-bottom: 5px solid {Ukraine.Palette.Secondary};")">
        <MudIconButton Link="/" Icon="@Icons.Filled.Home" Color="Color.Secondary" Variant="Variant.Outlined" Size="Size.Medium" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{
    MudTheme Ukraine = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#00509d",
            Secondary = "#fdc500",
            Tertiary = "#00296B",
            Success = "#008712",
            AppbarBackground = "#00509d",
        },
    };
}