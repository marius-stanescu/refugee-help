@inherits LayoutComponentBase

<MudThemeProvider Theme="Ukraine" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="2" Style="@($"border-bottom: 5px solid {Ukraine.Palette.Secondary};")">
        <MudButton Link="/" Variant="Variant.Text" Size="Size.Large" Color="Color.Secondary" DisableElevation="true">
            <MudImage Src="images/logo.png" Alt="Logo" Elevation="0" Class="rounded-lg mr-4" Height="44" />
            Ajutor refugia»õi
        </MudButton>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    MudTheme Ukraine = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#0057B8",
            Secondary = "#FFD700",
            Tertiary = "#00296B",
            Success = "#008712",
            AppbarBackground = "#00509d",
        },
    };
}